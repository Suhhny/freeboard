<!doctype html>
<html>
  <head>
    <meta charset = "utf-8" />  <!--한글 포함-->
    <title>자유게시판</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-timeago/1.6.3/jquery.timeago.js"></script>
  </head>
  <body>
    <% if(results !== undefined) { %>
    <div class = "container" style = "margin-top: 50px">
      <h2><%= results.title %></h2>
      <div style = 'text-align: right'>
        <time class="timeago" datetime="<%= results.create_at %>"></time>
        <p>조회수 : <%= results.viewnumber %></p>

        <% if(user !== undefined && user.id === results.author){ %>
        <form method = "post" action = "/destroy/<%= results._id %>" id="delete"></form>
        <a href = "/rewrite/<%= results._id %>">
        <span class="badge badge-primary">수정</span></a>
        <a href = "#" onClick = "document.getElementById('delete').submit();">
        <span class="badge badge-danger">삭제</span></a>
        <% } %>

      </div><hr />
      <p><%= results.content %></p>
      <div style = "text-align: right">
        <a href = "/"><button type="button" class="btn btn-light">목록으로</button></a>
      </div>
    </div>
    <% } %>
    <script type="text/javascript">
    jQuery(document).ready(function() {
     $("time.timeago").timeago();
    });
    </script>
  </body>
</html>
